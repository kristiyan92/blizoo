<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_client_contract_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/client_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/client_last_name_textview"
        android:layout_toRightOf="@+id/client_name_textview"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/client_phone_textview"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/client_last_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
