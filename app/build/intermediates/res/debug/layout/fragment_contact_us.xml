<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.bg.ecommcongress.ContactUsActivity">


    <TextView
        android:id="@id/android:empty"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_results"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contact_with_us_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Свържете се с нас"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/your_name_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/contact_with_us_txt"
        android:hint="@string/your_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/your_email_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/your_name_et"
        android:hint="@string/your_email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/your_message_et"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/your_email_et"
        android:hint="@string/your_message"
        android:gravity="start"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/send_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_message_et"
        android:layout_centerHorizontal="true"
        android:text="@string/send_message"/>

    <ProgressBar
        android:id="@+id/pb_sponsors"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false" />

</RelativeLayout>
